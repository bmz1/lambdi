{
  "name": "@bmz_1/lambdi",
  "version": "1.0.4",
  "type": "module",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "di": [
        "dist/container.d.ts"
      ],
      "loadenv": [
        "dist/loadenv.d.ts"
      ]
    }
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./di": "./dist/container.js",
    "./loadenv": "./dist/loadenv.js"
  },
  "description": "Ultra‑light DI, and env helpers for AWS Lambda with zero cold‑start tax.",
  "keywords": [
    "aws",
    "lambda",
    "di",
    "dependency-injection",
    "serverless",
    "env"
  ],
  "author": "bmz",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.mjs && tsc --project tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@zod/mini": "^4.0.0-beta.20250503T014749",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^3.1.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmz1/lambdi.git"
  },
  "peerDependencies": {
    "@zod/mini": "^4.0.0-beta.20250503T014749"
  },
  "sideEffects": false
}
