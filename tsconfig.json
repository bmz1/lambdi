{
    "compilerOptions": {
      /* --- language / emit -------------------------------------------- */
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["ES2022"],
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "emitDeclarationOnly": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
  
      /* --- safety nets ------------------------------------------------ */
      "strict": true,
      "skipLibCheck": true,
  
      /* --- tooling ---------------------------------------------------- */
      "types": ["node"]          /* add "vitest/globals" to this array for test tsconfig */
    },
    "include": ["src/**/*", "build.mjs"],
    "exclude": [
      "dist",
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
  }
  